<h3> Only my products for sale </h3>
<div class="row">
    <% for(var i = 0 ; i < products.length; i++){ %>
      <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="http://placehold.it/320x150" alt="">
            <div class="caption">
                <h4 class="pull-right">$<%= products[i].price%></h4>
                <h4><a href="#"><%= products[i].name %></a>
                </h4>
                <p> <%= products[i].description %> </p>
                <p> Created: <%= products[i].created.toLocaleString() %> </p>
            </div>
            <div class="ratings">
                <a type="button" href="/update?id_product=<%=products[i]._id%>" class="btn btn-info">Update</a>
                <a type="button" href="/delete?id_product=<%=products[i]._id%>" class="btn btn-danger">Delete</a>
            </div>
        </div>
      </div>
    <% } %>
</div>