<h3> All products for sale </h3>
<div class="row">
    <% for(var i = 0 ; i < products.length; i++){ %>
      <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="../public/images/appliances" alt="">
            <div class="caption">
                <h4 class="pull-right">$<%= products[i].price%></h4>
                <h4><a href="#"><%= products[i].name %></a>
                </h4>
                <p> <%= products[i].description %> </p>
                <p> Created: <%= products[i].created.toLocaleString() %> </p>
            </div>
            <div class="ratings">
                <p class="pull-right"><%= products[i].username %></p>
                <p>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star-empty"></span>
                </p>
            </div>
        </div>
      </div>
    <% } %>
</div>